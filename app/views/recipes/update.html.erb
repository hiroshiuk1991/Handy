  <%= f.label "Description" %>
  <%= f.text_area :description %><br>
  <% f.label "Ingredients" %>
  <%= f.fields_for :lists do |i| %>
    <%= i.label :amount %>
    <%= i.text_field :amount %><br>
  <% end %>
